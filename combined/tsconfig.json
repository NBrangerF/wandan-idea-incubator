{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "*.tsx",
    "*.ts",
    "../stage 1 idea lab/idea-lab_-project-charter/**/*.ts",
    "../stage 1 idea lab/idea-lab_-project-charter/**/*.tsx",
    "../stage 2 idea simulation/**/*.ts",
    "../stage 2 idea simulation/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "vite.config.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
